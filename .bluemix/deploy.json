{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "messages": {
    "$i18n": "locales.yml"
  },
  "title": {
    "$ref": "#/messages/deploy.title"
  },
  "description": {
    "$ref": "#/messages/deploy.description"
  },
  "longDescription": {
    "$ref": "#/messages/deploy.longDescription"
  },
  "type": "object",
  "properties": {
    "api-key": {
      "description": {
        "$ref": "#/messages/deploy.apikeyDescription"
      },
      "type": "string",
      "pattern": "\\S"
    },
    "registry-region": {
      "description": {
        "$ref": "#/messages/deploy.registryRegionDescription"
      },
      "type": "string",
      "disabled": false
    },
    "registry-namespace": {
      "description": {
        "$ref": "#/messages/deploy.registrynsDescription"
      },
      "type": "string",
      "pattern": "^[a-z0-9][-_a-z0-9]{2,28}[a-z0-9]$"
    },
    "prod-region": {
      "description": {
        "$ref": "#/messages/deploy.regionDescription"
      },
      "type": "string",
      "disabled": false
    },
    "prod-cluster-name": {
      "description": {
        "$ref": "#/messages/deploy.clusterNameDescription"
      },
      "type": "string",
      "pattern": "\\S"
    },
    "prod-cluster-namespace": {
      "description": {
        "$ref": "#/messages/deploy.namespaceDescription"
      },
      "type": "string",
      "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
    }
  },
  "required": [
    "api-key",
    "registry-region",
    "registry-namespace",
    "prod-region",
    "prod-cluster-name",
    "prod-cluster-namespace"
  ],
  "form": [
    {
      "type": "validator",
      "url": "/devops/setup/bm-helper/custom_helper.html"
    },
    {
      "type": "password",
      "readonly": false,
      "title": {
        "$ref": "#/messages/deploy.apikey"
      },
      "key": "api-key"
    },
    {
      "type": "section",
      "title": { "$ref": "#/messages/deploy.crSection" },
      "items": [
        {
          "type": "table",
          "columnCount": 3,
          "widths": [
            "50%",
            "3%",
            "47%"
          ],
          "items": [
            {
              "type": "label",
              "title": {
                "$ref": "#/messages/deploy.containerregRegion"
              }
            },
            {
              "type": "label",
              "title": ""
            },
            {
              "type": "label",
              "title": {
                "$ref": "#/messages/deploy.containerregns"
              }
            },
            {
              "type": "select",
              "title": {
                "$ref": "#/messages/deploy.imgregRegion"
              },
              "key": "registry-region"
            },
            {
              "type": "label",
              "title": ""
            },
            {
              "type": "select",
              "readonly": false,
              "title": {
                "$ref": "#/messages/deploy.imgregNs"
              },
              "key": "registry-namespace"
            }
          ]
        }
      ]
    },
    {
      "type": "section",
      "title": { "$ref": "#/messages/deploy.imageName" },
      "items": [
        {
          "type": "table",
          "columnCount": 3,
          "widths": ["33%", "33%", "33%", "33%"],
          "items": [
            "web-image-name",
            "db-image-name",
            "mms-image-name"
          ]
        }
      ]
    },
    {
      "type": "table",
      "columnCount": 5,
      "widths": [
        "32%",
        "2%",
        "32%",
        "2%",
        "32%"
      ],
      "items": [
        {
          "type": "label",
          "title": {
            "$ref": "#/messages/region"
          }
        },
        {
          "type": "label",
          "title": ""
        },
        {
          "type": "label",
          "title": {
            "$ref": "#/messages/deploy.cluster"
          }
        },
        {
          "type": "label",
          "title": ""
        },
        {
          "type": "label",
          "title": {
            "$ref": "#/messages/deploy.clusterNs"
          }
        },
        {
          "type": "select",
          "key": "prod-region"
        },
        {
          "type": "label",
          "title": ""
        },
        {
          "type": "select",
          "key": "prod-cluster-name",
          "readonly": false
        },
        {
          "type": "label",
          "title": ""
        },
        {
          "type": "text",
          "key": "prod-cluster-namespace",
          "readonly": false
        }
      ]
    },
    {
      "type": "table",
      "columnCount": 1,
      "widths": [
        "100%"
      ],
      "items": [
        {
          "type": "label",
          "title": {
            "$ref": "#/messages/deploy.clusterDescription"
          }
        }
      ]
    },
    {
      "type": "table",
      "columnCount": 1,
      "widths": [
        "100%"
      ],
      "items": [
        {
          "type": "label",
          "title": {
            "$ref": "#/messages/deploy.clusternsDescription"
          }
        }
      ]
    }
  ]
}