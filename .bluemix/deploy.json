{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "messages": {
    "$i18n": "locales.yml"
  },
  "title": {
    "$ref": "#/messages/deploy.title"
  },
  "description": {
    "$ref": "#/messages/deploy.description"
  },
  "longDescription": {
    "$ref": "#/messages/deploy.longDescription"
  },
  "type": "object",
  "properties": {
    "api-key": {
      "description": {
        "$ref": "#/messages/deploy.apiKeyDescription"
      },
      "type": "string",
      "pattern": "\\S"
    },
    "registry-region": {
      "description": {
        "$ref": "#/messages/deploy.registryRegionDescription"
      },
      "type": "string",
      "disabled": false
    },
    "registry-namespace": {
      "description": {
        "$ref": "#/messages/deploy.registrynsDescription"
      },
      "type": "string",
      "pattern": "^[a-z0-9][-_a-z0-9]{2,28}[a-z0-9]$"
    },
    "image-name": {
      "description": {
        "$ref": "#/messages/deploy.imageDescription"
      },
      "type": "string",
      "pattern": "\\S"
    },
      "prod-region": {
      "description": {
        "$ref": "#/messages/deploy.regionDescription"
      },
      "type": "string",
      "disabled": false
    },
    "prod-resource-group": {
      "description": {
        "$ref": "#/messages/deploy.groupDescription"
      },
      "type": "string",
      "pattern": "\\S"
    },
    "prod-cluster-name": {
      "description": {
        "$ref": "#/messages/deploy.clusterNameDescription"
      },
      "type": "string",
      "pattern": "\\S"
    },
    "prod-cluster-namespace": {
      "description": {
        "$ref": "#/messages/deploy.namespaceDescription"
      },
      "type": "string",
      "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
    },    
    "cfee-env": {
      "description": {
        "$ref": "#/messages/deploy.cfeeEnv"
      },
      "type": "string",
      "pattern": "\\S"
    },
    "cfee-host": {
      "description": {
        "$ref": "#/messages/deploy.cfeeHost"
      },
      "type": "string",
      "pattern": "\\S"
    },
    "cfee-org": {
      "description": {
        "$ref": "#/messages/deploy.cfeeOrg"
      },
      "type": "string",
      "pattern": "\\S"
    },
    "cfee-space": {
      "description": {
        "$ref": "#/messages/deploy.cfeeSpace"
      },
      "type": "string",
      "pattern": "\\S"
    }
  },
  "required": [
    "api-key",
    "registry-region",
    "registry-namespace",
    "image-name",
    "prod-region",
    "prod-resource-group",
    "prod-cluster-name",
    "prod-cluster-namespace",
    "cfee-env",
    "cfee-host",
    "cfee-org",
    "cfee-space"
  ],
  "form": [
    {
      "type": "validator",
      "url": "/devops/setup/bm-helper/custom_helper.html"
    },
    {
      "type": "password",
      "readonly": false,
      "title": {
        "$ref": "#/messages/deploy.apiKey"
      },
      "key": "api-key"
    },

    {
      "type": "section",
      "title": { "$ref": "#/messages/deploy.crSection" },
      "items": [
        {
          "type": "table",
          "columnCount": 3,
          "widths": [
            "33%",
            "33%",
            "33%"
          ],
          "items": [
            {
              "type": "select",
              "title": {
                "$ref": "#/messages/deploy.imgregRegion"
              },
              "key": "registry-region"
            },
            {
              "type": "select",
              "readonly": false,
              "title": {
                "$ref": "#/messages/deploy.imageRegistryNamespace"
              },
              "key": "registry-namespace"
            },
            {
              "type": "text",
              "readonly": false,
              "title": {
                "$ref": "#/messages/deploy.imageName"
              },
              "key": "image-name"
            }
          ]
        }
      ]
    },
    {
      "type": "select",
      "key": "prod-region"
    },
    {
      "type": "text",
      "readonly": false,
      "title": {
        "$ref": "#/messages/deploy.groupName"
      },
      "key": "prod-resource-group"
    },
    {
      "type": "select",
      "key": "prod-cluster-name",
      "readonly": false
    },
    {
      "type": "text",
      "key": "prod-cluster-namespace",
      "readonly": false
    },
    {
      "type": "text",
      "readonly": false,
      "title": {
        "$ref": "#/messages/deploy.cfeeEnv"
      },
      "key": "cfee-env"
    },
    {
      "type": "text",
      "readonly": false,
      "title": {
        "$ref": "#/messages/deploy.cfeeHost"
      },
      "key": "cfee-host"
    },
    {
      "type": "text",
      "readonly": false,
      "title": {
        "$ref": "#/messages/deploy.cfeeOrg"
      },
      "key": "cfee-org"
    },
    {
      "type": "text",
      "readonly": false,
      "title": {
        "$ref": "#/messages/deploy.cfeeSpace"
      },
      "key": "cfee-space"
    }
  ]
}